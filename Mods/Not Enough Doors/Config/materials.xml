<PaperSama0104>

<!--
I added special materials for the glass doors, this way they will feel like
normal vanilla doors in terms of toughness, but still look like glass doors
even when being hit

I also included wood and steel versions of the 3x2x2 garage door
-->

<append xpath="/materials">
	<material id="Mwood_regular_NEDglassSurface">
		<property name="damage_category" value="wood"/>
		<property name="surface_category" value="glass"/>
		<property name="forge_category" value="wood"/>
		<property name="Hardness" type="float" value="1"/>
		<property name="lightopacity" value="2"/>
		<property name="stepsound" value="wood"/>
		<property name="stability_glue" value="40"/>
		<property name="Mass" type="int" value="5"/>
		<property name="StabilitySupport" value="true"/>
		<property name="MaxDamage" value="225"/>
		<property name="Experience" value="2"/>
	</material>
	<material id="Mmetal_NEDglassSurface">
		<property name="damage_category" value="metal"/>
		<property name="surface_category" value="glass"/>
		<property name="forge_category" value="iron"/>
		<property name="Hardness" type="float" value="1"/>
		<property name="lightopacity" value="2"/>
		<property name="stepsound" value="metal"/>
		<property name="stability_glue" value="300"/>
		<property name="Mass" type="int" value="20"/>
		<property name="StabilitySupport" value="true"/>
		<property name="MaxDamage" value="300"/>
		<property name="Experience" value="2"/>
	</material>
	<material id="Msteel_NEDglassSurface">
		<property name="damage_category" value="metal"/>
		<property name="surface_category" value="glass"/>
		<property name="forge_category" value="iron"/>
		<property name="Hardness" type="float" value="1"/>
		<property name="lightopacity" value="2"/>
		<property name="stepsound" value="metal"/>
		<property name="stability_glue" value="300"/>
		<property name="Mass" type="int" value="20"/>
		<property name="StabilitySupport" value="true"/>
		<property name="explosionresistance" value="0.5"/>
		<property name="MaxDamage" value="7000"/>
		<property name="Experience" value="6"/>
	</material>
	<material id="Mwood_regularGarageDoor3x2x2">
		<property name="damage_category" value="wood"/>
		<property name="surface_category" value="wood"/>
		<property name="forge_category" value="wood"/>
		<property name="Hardness" type="float" value="1"/>
		<property name="stepsound" value="wood"/>
		<property name="stability_glue" value="40"/>
		<property name="Mass" type="int" value="5"/>
		<property name="MaxDamage" value="225"/>
		<property name="Experience" value="1"/>
		<property name="explosionresistance" value="1"/>
	</material>
	<material id="MsteelGarageDoor3x2x2">
		<property name="damage_category" value="metal"/>
		<property name="surface_category" value="metal"/>
		<property name="forge_category" value="iron"/>
		<property name="Hardness" type="float" value="1"/>
		<property name="stepsound" value="metal"/>
		<property name="stability_glue" value="300"/>
		<property name="Mass" type="int" value="20"/>
		<property name="MaxDamage" value="7000"/>
		<property name="Experience" value="6"/>
		<property name="explosionresistance" value="1"/>
	</material>
</append>

</PaperSama0104>